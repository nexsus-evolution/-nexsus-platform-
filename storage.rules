rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Admin uploads - require authentication
    match /uploads/{allPaths=**} {
      allow read: if true; // Public read for display
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Library files - admin only upload, public read
    match /library/{type}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Section uploads - admin only
    match /sections/{section}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}